{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "src",
        "outDir": "./built",
        "target": "es6",
        "strict": true,
        "strictNullChecks": false,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "module": "commonjs",
        "lib": [
            "es2017",
            "dom",
            "es2015",
            "es5",
            "es6",
            "es7"
        ],
        "moduleResolution": "node",
        "sourceMap": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
      }
  },
  "include": [
      "src/**/*"
  ]
}
